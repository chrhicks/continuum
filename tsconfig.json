{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "types": ["bun-types"],
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "continuum": ["src/sdk/index.ts"]
    }
  },
  "include": ["src/**/*.ts", "bin/continuum", "tests/sdk-contract.ts"]
}
